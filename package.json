{
    "name": "css-preview",
    "publisher": "hsam",
    "displayName": "Atomic CSS Previewer - VS Code Extension (Proof of Concept)",
    "description": "CSS previewer for atomic and self contained css rules",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:css",
        "onLanguage:scss"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "css-preview.enable",
                "title": "css-preview: enable"
            },
            {
                "command": "css-preview.disable",
                "title": "css-preview: disable"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/HovSyan/css-preview"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.100.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.25.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "vscode-css-languageservice": "^6.3.6"
    }
}
